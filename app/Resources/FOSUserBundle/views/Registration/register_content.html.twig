<form action="{{ path('fos_user_registration_register') }}" method="POST" class="fos_user_registration_register"
      xmlns="http://www.w3.org/1999/html">
    <div class="row">
        <div class="col-md-12">
            <div class="form-body">
                <h3 class="form-section">Nouvel utilisateur</h3>

                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            {{ form_widget(form.email,{'attr':{'class':'form-control'} }) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Nom d'utilisateur</label>
                            {{ form_widget(form.username,{'attr':{'class':'form-control'} }) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Mot de passe</label>
                            <input type="password" class="form-control"
                                   name="fos_user_registration_form[plainPassword][first]"
                                   id="fos_user_registration_form_plainPassword_first">
                            {{ form_errors(form.plainPassword) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Retaper MDP</label>
                            <input type="password" class="form-control"
                                   name="fos_user_registration_form[plainPassword][second]"
                                   id="second">
                            {{ form_errors(form.plainPassword) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Nom</label>
                            {{ form_widget(form.nom,{'attr':{'class':'form-control'} }) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Prenom</label>
                            {{ form_widget(form.prenom,{'attr':{'class':'form-control'} }) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Fonction</label>
                            {{ form_widget(form.fonction,{'attr':{'class':'form-control'} }) }}
                            {{ form_errors(form.fonction) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Telephone</label>
                            {{ form_widget(form.telephone,{'attr':{'class':'form-control'} }) }}
                            {{ form_errors(form.telephone) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    {{ form_widget(form._token) }}
                    <div class="form-actions text-center">
                        <input type="submit" class="btn btn-circle blue" value="Valider">
                        <input type="reset" class="btn btn-circle default" value="Effacer">
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>